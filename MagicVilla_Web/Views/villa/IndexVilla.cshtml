@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>
<div class="container villa-list-container">
    <div class="row pb-3">
        <div class="col">
            <h1 class="text-light">Gallery List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary create-villa-btn">
                <i class="bi bi-plus-square-fill"></i> Create New Villa
            </a>
        </div>
    </div>

    <table class="table villa-list-table">
        <thead>
        <tr>
            <th>Villa NO.</th>
            <th>Villa Name</th>
            <th>Rate</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Rate</td>
                <td>
                    <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id"
                       class="btn btn-success">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id"
                       class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>